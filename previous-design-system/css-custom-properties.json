{
  "css-custom-properties": {
    "gradients": {
      "bg-gradient-primary": {
        "property": "--gradient-primary",
        "value": "linear-gradient(135deg, hsl(263, 70%, 60%), hsl(280, 100%, 70%))",
        "usage": ["hero-title", "hero-button"],
        "description": "Primary gradient implemented as CSS custom property, used via bg-gradient-primary class"
      },
      "bg-gradient-secondary": {
        "property": "--gradient-secondary", 
        "value": "linear-gradient(135deg, hsl(240, 100%, 70%), hsl(263, 70%, 60%))",
        "description": "Secondary gradient as CSS custom property"
      },
      "bg-gradient-subtle": {
        "property": "--gradient-subtle",
        "value": "linear-gradient(180deg, hsl(240, 10%, 3.9%), hsl(240, 10%, 6%))",
        "usage": ["about-section"],
        "description": "Subtle background gradient for sections"
      }
    },
    "shadows": {
      "shadow-glow": {
        "property": "--shadow-glow",
        "value": "0 0 40px hsl(263, 70%, 60% / 0.3)",
        "usage": ["button-hover"],
        "description": "Glow shadow effect as CSS custom property"
      },
      "shadow-elegant": {
        "property": "--shadow-elegant",
        "value": "0 10px 30px -10px hsl(0, 0%, 0% / 0.5)",
        "usage": ["card-hover"],
        "description": "Elegant shadow for elevated components"
      }
    },
    "transitions": {
      "transition-smooth": {
        "property": "--transition-smooth",
        "value": "all 0.3s cubic-bezier(0.4, 0, 0.2, 1)",
        "usage": ["buttons", "cards", "hover-effects"],
        "description": "Smooth transition as CSS custom property"
      }
    },
    "implementation-notes": {
      "description": "These custom properties are defined in :root and used via Tailwind utility classes",
      "examples": {
        "gradient-usage": "className='bg-gradient-primary'",
        "shadow-usage": "className='hover:shadow-glow'", 
        "transition-usage": "className='transition-smooth'"
      }
    }
  }
}